---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { buttonVariants } from '@/components/ui/button'
import Layout from '@/layouts/Layout.astro'
import { cn } from '@/lib/utils'
import { Icon } from 'astro-icon/components'
---

<Layout>
  <PageHead slot="head" title="404" />
  <Breadcrumbs items={[{ label: '404', icon: 'lucide:circle-x' }]} />

  <section
    class="flex flex-col items-center justify-center gap-y-4 text-center"
  >
    <div class="max-w-md">
      <h1 class="mb-4 text-8xl font-medium">404</h1>
      <p class="prose">The page you're looking for doesn't exist. It might've been renamed, moved, or deleted. (Or eaten by a black hole.)</p>
    </div>
    <div class="flex gap-x-4">
      <Link
        href="/"
        class={cn(buttonVariants({ variant: 'outline' }), 'flex gap-x-1.5 group')}
      >
        <Icon name="lucide:undo-2" class="size-4" />
        Abort
      </Link>
      <Link
        href=""
        class={cn(buttonVariants({ variant: 'outline' }), 'flex gap-x-1.5 group')}
      >
        <Icon name="lucide:rotate-ccw" class="size-4" />
        Retry
      </Link>
      <Link
        href="https://www.youtube.com/watch?v=E4WlUXrJgy4"
        class={cn(buttonVariants({ variant: 'outline' }), 'flex gap-x-1.5 group')}
      >
        <Icon name="lucide:x" class="size-4" />
        Fail
      </Link>
    </div>
  </section>
</Layout>
