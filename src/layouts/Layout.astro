---
import "@/styles/global.css"
import "@/styles/typography.css"

import Background from "@/components/Background.astro"
import Footer from "@/components/Footer.astro"
import Head from "@/components/Head.astro"
import Header from "@/components/Header.astro"
import { SITE } from "@/consts"
---

<!doctype html>
<html lang={SITE.locale}>
	<Head>
		<slot name="head" />
	</Head>
	<body>
		<Background />
		<div
			class="flex h-fit min-h-screen max-w-4xl flex-col gap-y-2 font-sans backdrop-blur-sm md:m-auto"
			style="background-color: var(--background); opacity: 0.93; z-index: -1;"
		>
			<Header />
			<main class="grow p-4 sm:px-6 lg:px-8">
				<slot />
			</main>
			<Footer />
		</div>
	</body>
</html>
